<html>
  <head>
    <title>{{ name }} Recipe</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    {{> ../components/menu}}
    <div class="h-screen w-full bg-slate-900">
      <div class="flex justify-center pt-24">
        <div class="w-1/2 px-14 py-6 bg-slate-800 rounded-2xl">
          <h1 class="text-3xl text-slate-50">{{ name }}</h1>
          <p class="text-xs text-slate-200">{{ author_name }}</p>
          <div class="mt-3 flex gap-4">
            <span
              class="rounded-lg px-3 py-1 text-xs text-slate-300 outline outline-1"
              >{{ category_name }}</span
            >
          </div>

          <div class="mt-8">
            <h1 class="text-2xl text-slate-50">Description</h1>

            <div class="mt-6 text-slate-400">
              <h2>{{ preparation_description }}</h2>
            </div>
          </div>

          <h2 class="mt-4 text-slate-300"></h2>

          <div class="mt-8">
            <h1 class="text-2xl text-slate-50">Ingredients</h1>

            <div class="mt-6 text-slate-400">
              <h2>{{ ingredients }}</h2>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>

<style>
  *,
  body {
    font-family: "Poppins", sans-serif;
  }
</style>
