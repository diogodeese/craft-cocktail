<html>
  <header>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
    <script src="https://cdn.tailwindcss.com"></script>
  </header>
  <body>
    <div class="flex">
      <div class="w-1/2">
        <img
          src="https://images.unsplash.com/photo-1632277671195-f255ec604563?q=80&w=1972&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
          alt=""
          class="aspect-video h-screen object-cover brightness-90 contrast-125"
        />
      </div>
      <div class="w-1/2">
        <form
          id="signInForm"
          method="post"
          action="/signIn"
          class="flex h-screen w-auto flex-col items-center justify-center gap-3"
        >
          <h4 class="text-grey mb-6 text-3xl text-slate-700">Sign In</h4>

          <input
            class="w-1/3 rounded-xl border p-2"
            type="email"
            name="email"
            placeholder="Email"
          />
          <input
            class="w-1/3 rounded-xl border p-2"
            type="password"
            name="password"
            placeholder="Password"
          />

          <button
            type="submit"
            class="h-10 w-1/3 rounded-lg bg-slate-800 text-white mt-4"
          >
            Sign In
          </button>
        </form>
      </div>
    </div>

    <script>
      document
        .getElementById('signInForm')
        .addEventListener('submit', function (event) {
          event.preventDefault()

          const formData = {
            email: document.querySelector('[name="email"]').value,
            password: document.querySelector('[name="password"]').value,
          }

          fetch('/signIn', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify(formData),
          })
            .then((response) => {
              if (!response.ok) {
                throw new Error('Network response was not ok')
              }
              return response.json()
            })
            .then((data) => {
              localStorage.setItem('token', data)

              window.location.href = '/recipes'
            })
            .catch((error) => {
              console.error('Error during fetch:', error)
            })
        })
    </script>
  </body>
</html>
